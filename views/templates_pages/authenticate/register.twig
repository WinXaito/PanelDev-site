{% extends 'base.twig' %}

{% block article %}
    <div class="col-lg-6 col-lg-offset-2">
        <form class="form col-md-12 center-block" method="POST" action="">
            <div class="form-group">
                <input class="form-control input-lg" placeholder="Identifiant" name="username" type="text" value="{{ preset.username }}">
            </div>
            <div class="form-group">
                <input class="form-control input-lg" placeholder="Adresse email" name="email" type="text" value="{{ preset.email }}">
            </div>
            <div class="form-group">
                <input class="form-control input-lg" placeholder="Mot de passe" name="password" type="password">
            </div>
            <div class="form-group">
                <input class="form-control input-lg" placeholder="Confirmer le mot de passe" name="confirmPassword" type="password">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-lg btn-block">Inscription</button>
                <span class="pull-right"><a href="{{ URL }}/login">Connexion</a></span><span><a href="#">Besoin d'aide ?</a></span>
            </div>

            {{ message|raw }}
        </form>
    </div>
{% endblock %}