{% extends 'default.twig' %}

{% block content %}
    <div class="sidebar">
        <span><a href="{{ URL }}/project/{{ project.url }}/update">Modifier</a></span>
        <span><a href="{{ URL }}/project/{{ project.url }}/view/documentation">Documentation</a></span>
        <span><a href="{{ URL }}/project/{{ project.url }}/view/analytics">Analyse</a></span>
        <span><a href="{{ URL }}/project/{{ project.url }}/view/users">Utilisateurs</a></span>
        <span class="pull-right" style="display:inline-block"><a href="{{ URL }}/project/{{ project.url }}/remove">Supprimer</a></span>
    </div>

    <h3 class="page-title">{{ project.name }}
        {% if project.urlProject is not empty %}
            <span class="pull-right">
                <a href="{{ project.urlProject }}" class="btn btn-default btn-accessproject">Acc√©der au projet</a>
            </span>
        {% endif %}
    </h3>

    <div>
        <p>{{ project.description }}</p>
    </div>
{% endblock %}